<h1>Welcome to Good Burger, home of the good burger...</h1>
<div class="container">
  <div class="row">

    <div class"col-md-4 offset-sm-1">
      <h2>Ready to eat!</h2>
      <ul>
        {{#each burger}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class"col-md-4">
      <h2>Eaten Burgers!</h2>
      <ul>
        {{#each burger}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>
</div>

<h2>Add a Burger</h2>
<form class=" create-form">

  <div class="form-group">
    <label for="ca">Customer Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Negative!<br>
    <input type="radio" name="eaten" value="0"> Affirmative!
  </div>

  <button type="submit">Add Burger</button>
</form>